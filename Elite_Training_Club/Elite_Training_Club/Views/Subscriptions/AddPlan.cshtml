
@model Elite_Training_Club.Models.AddSubscriptionPlansViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Plan / Suscripción</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddPlan" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubscriptionId" />
            <input type="hidden" asp-for="Plans" />
            <div class="form-group">
                <label asp-for="PlanId" class="control-label"></label>
                <select asp-for="PlanId" asp-items="Model.Plans" class="form-control"></select>
                <span asp-validation-for="PlanId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model.SubscriptionId" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
