@model Elite_Training_Club.Models.HeadquarterViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Sede</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditHeadquarter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CityId" />
            <partial name="_Headquarter" />
            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="DetailsCity" asp-route-id="@Model.CityId" class="btn btn-outline-success">Regresar </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}